										$fileexplob = explode ('_', $filename);
										//echo "$filename <br>";
										if ($fileexplob[0] > 0 AND $fileexplob[0] < 1000){
											$numeros[]=$fileexplob[0];  // escirbe el maxmo
										}
								}
						}
						if ($numeros == '') {
							$maxnumber=0;
						} else {
							rsort($numeros);
							$maxnumber=$numeros[0];
						}
						return $maxnumber;
				} else {
						return 0;
				}
	}
	
