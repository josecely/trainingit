	function qtyimages() {
                global $db, $urlimages;
				  if (file_exists(''.$urlimages.'/'.$this->id.'')) {
						$dp = opendir(''.$urlimages.'/'.$this->id.''); // recorro carpeta de imagenes
						while ($files = readdir($dp)) {
