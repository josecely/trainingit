	public function creardocumento($Grupo,$productos,$Genera,$Recibe,$Ciudad,$totalpartes,$recibio,$fabricante,$notas, $Sede){
		global $db, $sesion;
		if (parent::creardocumento($sesion->get_var('empresa'),$productos,$Genera,$Recibe,$Ciudad))  {	// cargo los productos en contenido
                        $sql = "INSERT INTO `Documento` (Grupo, Clase, Subserie, Fecha, Ciudad, Genera, Recibe, Var1, Var3, Var5, Var7, Contenido, Sede) VALUES ('$this->Grupo', '$this->Clase', '$this->Subserie', '$this->Fecha', '$this->Ciudad', '$this->Genera', '$this->Recibe', '$fabricante', '$totalpartes', '$notas', '$recibio', '$this->Contenido', '$Sede')";
                        if ($db->query($sql)) {
                                if (parent::seleccionadocumento($this->id)) {
                                        return $this->id;
                                } else {
                                        return FALSE;
                                }
                        } else {
                                return FALSE;
                        }
                } else {
                        return FALSE;
                }
